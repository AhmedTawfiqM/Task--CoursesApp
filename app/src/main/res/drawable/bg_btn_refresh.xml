<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D3D1D1" />
            <stroke android:width="1dp" android:color="#7E7B7B" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#E4E1E1" />
            <stroke android:width="0.5dp" android:color="#7E7B7B" />
        </shape>
    </item>
</selector>