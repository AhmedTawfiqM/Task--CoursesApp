<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.courseDetails.CourseDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCourse"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_156sdp"
            android:layout_weight="1"
            android:background="@color/redColor1"
            android:gravity="center|right"
            android:padding="@dimen/_6sdp"
            android:text="  Udemy "
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_9ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivCourse"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvCourseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_4sdp"
                android:text=" "
                android:textColor="@color/blackColor"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCourseInstructor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_4sdp"
                android:singleLine="true"
                android:text=" "
                android:textColor="@color/blackColor"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCourseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text=" "
                android:textColor="@color/blackColor"
                android:textSize="@dimen/_10ssp" />

            <FrameLayout
                android:id="@+id/banner_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text="Price  "
                    android:textColor="@color/redColor1"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:text="12$"
                        android:textColor="@color/redColor1"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_centerInParent="true"
                        android:background="@color/blackColor" />

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tvDateFinished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:maxLines="1"
                android:padding="@dimen/_4sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/blackColor"
                android:textSize="@dimen/_9ssp" />

            <Button
                android:id="@+id/WatchCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/bg_btn"
                android:drawableRight="@drawable/eye"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Go To The Course"
                android:textColor="@color/whiteColor" />

        </LinearLayout>

    </RelativeLayout>


</ScrollView>