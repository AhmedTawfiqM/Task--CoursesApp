<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F3F3"
        tools:context=".ui.aboutus.AboutUs">

        <ImageView
            android:id="@+id/ivDeveloper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@color/dots_color"
            android:scaleType="centerInside"
            android:src="@drawable/back_aboutus" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_170sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameDeveloper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center|left"
                    android:padding="@dimen/_10sdp"
                    android:text="Ahmed Tawfiq"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/_2sdp"
                    android:text="Software Enginner Android Developer"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="#E1E1E1" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email"
                    android:gravity="center|left"
                    android:padding="@dimen/_10sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:text="ahmedadelmm26@gmail.com"
                    android:textColor="#222222"
                    android:textSize="@dimen/_12ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#E1E1E1" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/phone"
                    android:gravity="center|left"
                    android:padding="@dimen/_10sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:text="01159545785"
                    android:textColor="#222222"
                    android:textSize="@dimen/_12ssp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#E1E1E1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center|left"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:text="MEDIA"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="@dimen/_12ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#E1E1E1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp">


                    <ImageView
                        android:id="@+id/ivFB"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:src="@drawable/fb" />

                    <ImageView
                        android:id="@+id/ivGitHub"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:src="@drawable/github" />

                    <ImageView
                        android:id="@+id/ivTwitter"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:src="@drawable/twitter" />

                    <ImageView
                        android:id="@+id/ivLinkedIN"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:src="@drawable/linkedin" />

                    <ImageView
                        android:id="@+id/ivInstigram"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/instagram" />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>
